{
  "name": "eddystrap",
  "version": "0.2.0",
  "description": "Natural kinetic UI components for the web",
  "type": "module",
  "main": "dist/eddystrap.umd.js",
  "module": "dist/eddystrap.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/eddystrap.es.js",
      "require": "./dist/eddystrap.umd.js"
    },
    "./styles.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,css}\"",
    "prepare": "husky"
  },
  "keywords": [
    "ui",
    "kinetic",
    "natural",
    "interaction",
    "eddy",
    "pool",
    "press-and-hold",
    "commitment",
    "time-based"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eddystrap/eddystrap.git"
  },
  "bugs": {
    "url": "https://github.com/eddystrap/eddystrap/issues"
  },
  "homepage": "https://github.com/eddystrap/eddystrap#readme",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4"
  }
}
